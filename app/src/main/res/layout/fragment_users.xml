<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UsersFragment.UsersFragment"
    android:background="#009EAD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/usersSearchBar"
            android:hint="Buscar..."
            android:layout_margin="5dp"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="33dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:background="#C8D5D6"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp">
            <Button
                android:id="@+id/topBtnAllusers"
                android:background="#ffff"
                android:text="Todos"
                android:layout_marginRight="3dp"
                android:textColor="#009EAD"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/topBtnUserGroups"
                android:layout_marginRight="3dp"
                android:background="#fff"
                android:text="Grupos"
                android:textColor="#009EAD"
                android:layout_width="60dp"
                android:layout_height="match_parent" />

            <Button

                android:id="@+id/topBtnFriends"
                android:layout_marginRight="3dp"
                android:background="#fff"
                android:text="Amigos"
                android:textColor="#009EAD"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/topBtnUserRequests"
                android:layout_marginRight="3dp"
                android:background="#fff"
                android:text="Solicitudes"
                android:textColor="#009EAD"
                android:layout_width="90dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/usersListview"
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>