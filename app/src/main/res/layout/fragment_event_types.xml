<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".Fragments.CreateEventsFragments.EventTypesFragment"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/newsEvent"
        android:layout_width="74dp"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="177dp"
        android:background="@drawable/noticias"
        android:contentDescription="@string/todo" />

    <RadioButton
        android:id="@+id/radioButtonNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButtonNews"
        android:layout_below="@+id/forTypeEvent"
        android:layout_marginTop="-74dp"
        android:gravity="center"
        android:layout_alignLeft="@+id/radioButtonNews" />

    <RadioButton
        android:id="@+id/radioButtonEventsType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButtonWorks"
        android:layout_alignTop="@+id/radioButtonNotification"
        android:gravity="center"
        android:layout_alignLeft="@+id/radioButtonWorks" />

    <RadioButton
        android:id="@+id/radioButtonWorks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="77dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="77dp" />

    <RadioButton
        android:id="@+id/radioButtonNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="85dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="85dp" />

    <Button
        android:id="@+id/jobOfferEvent"
        android:layout_width="75dp"
        android:layout_height="101dp"
        android:layout_alignLeft="@+id/forTypeEvent"
        android:layout_alignStart="@+id/forTypeEvent"
        android:layout_alignTop="@+id/newsEvent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ofertatrabajo"
        android:contentDescription="@string/todo" />

    <Button
        android:id="@+id/notificationEvent"
        android:layout_width="81dp"
        android:layout_height="92dp"
        android:layout_alignLeft="@+id/newsEvent"
        android:layout_alignStart="@+id/newsEvent"
        android:layout_alignTop="@+id/forTypeEvent"
        android:layout_marginBottom="268dp"
        android:background="@drawable/notificaciones"
        android:contentDescription="@string/todo" />

    <Button
        android:id="@+id/forTypeEvent"
        android:layout_width="86dp"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="105dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/eventos2"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/whatTypeEvent"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="¿Qué tipo de evento vas a crear?"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="#009EAD" />


</RelativeLayout>