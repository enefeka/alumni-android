<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailEventActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#D7F0F2"
        android:scaleType="centerCrop"
        android:contentDescription="@string/todo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/eventImage"
        android:background="#009EAD">

        <TextView
            android:id="@+id/detailTile"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Titulo del evento"
            android:textColorHint="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detailEventDate"
            android:layout_width="363dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailTile"
            android:hint="Fecha del evento"
            android:textColorHint="#ffff"
            android:textSize="17dp" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="46dp"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:background="@drawable/ic_black_x"
            android:backgroundTint="#356A79" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:background="#D7F0F2"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:gravity="top|center"
            android:hint="Description"
            android:textColorHint="#121211"
            android:textSize="20dp" />




    </RelativeLayout>


    <Button
        android:id="@+id/commentsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#356A79"
        android:text="Ver todos los comentarios"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/relLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="bottom">


        <EditText
            android:id="@+id/editTextDetailComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:hint="Add a comment..."
            android:padding="2dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/addDetailComment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/enviarxhdpi" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_image_event"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="458dp"
        android:src="@drawable/administrador"
        app:civ_border_color="@color/black"
        app:civ_border_width="0.5dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textLastComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginBottom="176dp"
        android:text="TextView" />


</RelativeLayout>