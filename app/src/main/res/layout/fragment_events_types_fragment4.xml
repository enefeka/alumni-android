<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CreateEventsFragments.EventsTypesFragment4">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:gravity="center"
        android:text="¿Quieres añadir una imagen?"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/uploadImageBtn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="#009EAD"
        android:text="Subir Imagen"
        android:textAllCaps="false"
        android:textColor="#ffff"
        tools:ignore="RtlCompat" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/cerrar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="*Opcional"
        android:textColor="#009EAD"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageEventype"
        android:layout_width="219dp"
        android:layout_height="177dp"
        android:layout_centerInParent="true"
        android:background="@drawable/eventos"
        android:contentDescription="@string/todo" />
</RelativeLayout>